<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/layout_marginLeft_iV</item>
        <item name="android:layout_marginStart">@dimen/layout_marginStart_iV</item>
        <item name="android:layout_marginTop">@dimen/layout_marginTop_iV_tV</item>
    </style>
    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/layout_marginLeft_tV</item>
        <item name="android:layout_marginStart">@dimen/layout_marginStart_tV</item>
        <item name="android:layout_marginTop">@dimen/layout_marginTop_iV_tV</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>